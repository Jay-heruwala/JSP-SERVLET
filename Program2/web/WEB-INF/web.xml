<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.1" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_1.xsd">
    
    <welcome-file-list>
        <welcome-file>RequestInfoServlet</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>Details</servlet-name>
        <servlet-class>Details.Details</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestInfoServlet</servlet-name>
        <servlet-class>RequestInfoServlet</servlet-class>
        <init-param>
            <param-name>Name </param-name>
            <param-value>Jay Heruwala</param-value>
        </init-param>
        <init-param>
            <param-name>Email Id</param-name>
            <param-value>j@gmail.com</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Details</servlet-name>
        <url-pattern>/Details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestInfoServlet</servlet-name>
        <url-pattern>/RequestInfoServlet</url-pattern>
    </servlet-mapping>
</web-app>
